<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background_light">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/on_background_light"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal" />

    <!-- Theme Selection Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/surface_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theme"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface_light"
                android:layout_marginBottom="16dp" />

            <RadioGroup
                android:id="@+id/radioGroupTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioButtonLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/light_theme"
                    android:textColor="@color/on_surface_light"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/radioButtonDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dark_theme"
                    android:textColor="@color/on_surface_light"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/radioButtonSystem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/system_theme"
                    android:textColor="@color/on_surface_light"
                    android:padding="12dp" />

            </RadioGroup>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- App Info Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/surface_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_info"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface_light"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_version"
                android:textColor="@color/on_surface_variant_light"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_description"
                android:textColor="@color/on_surface_variant_light"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_copyright"
                android:textColor="@color/on_surface_variant_light" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Apply Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apply_settings"
        android:textSize="16sp"
        android:padding="16dp"
        app:cornerRadius="12dp"
        android:layout_marginTop="16dp" />

</LinearLayout> 